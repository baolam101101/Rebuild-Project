@using Rebuild_Project.Models;

@model IEnumerable<ApplicationUser>

@{
    ViewBag.Title = "Manage User";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="row">
    <div class="col-sm-12">
        <h2>@ViewBag.Title</h2>

        <hr />

        <br /><br />

        <table class="table table-bordered">
            <thead>
                <tr>
                    <th>User Name</th>
                    <th>Email</th>
                    <th>Genber</th>
                    <th>Address</th>
                    <th>Role</th>
                    <th>Action</th>
                </tr>
            </thead>

            <tbody>
                @foreach (var item in Model)
                {
                    <tr>
                        <td>@item.FullName</td>
                        <td>@item.Email</td>
                        <td>@(item.Gender == true ? "Male" : "Female")</td>
                        <td>@item.Address</td>
                        <td>@item.Roles</td>
                        <td>
                            @Html.ActionLink("Edit", "Edit", new { Id = item.Id }, null) |
                            @Html.ActionLink("Edit Role", "Edit Role", new { Id = item.Id }, null) |
                            @Html.ActionLink("Delete", "Delete", new { Id = item.Id }, null)
                        </td>
                    </tr>
                }
            </tbody>
        </table>
    </div>
</div>